@model Tracker.Data.tbl_events
<link href="~/Content/StyleSheet.css" rel="stylesheet" />

@{
    ViewBag.Title = "GetEventDetails";
}

<h2>GetEventDetails</h2>

<div>
    <h4>tbl_events</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Event_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event_Date)
        </dt>

        <dd>
            @Convert.ToString(string.Format("{0:yyyy/MM/dd}", Model.Event_Date)) @*Converts the DateTime data type that ASP.NET uses by default into a string with the format of Date Only (https://stackoverflow.com/a/34990313/12764653)*@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event_Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tbl_venues.V_Name), <br />
            @Html.DisplayFor(model => model.tbl_venues.V_StreetAddress), <br />
            @Html.DisplayFor(model => model.tbl_venues.V_City)<br />
            @Html.DisplayFor(model => model.tbl_venues.tbl_countries.C_Name) (@Html.DisplayFor(model => model.tbl_venues.tbl_countries.C_Iso3))
        </dd>
        <dt>
            Event Flyer:
        </dt>



            <dd>
                <img class="profile-image" src="@Url.Action("EventImageIndex", "File", new { File_ID = Model.tbl_eventImages.First(f => f.Event_ID == Model.Event_ID).File_ID })" />
            </dd>
       

            @Html.ActionLink("View on Google Maps", "../Venue/Redirect", new { V_Name = Model.tbl_venues.V_Name, V_StreetAddress = Model.tbl_venues.V_StreetAddress, V_City = Model.tbl_venues.V_City }, new { target = "_blank" })
        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "EditEvent", new { Event_ID = Model.Event_ID, Country_ID = Model.tbl_venues.V_Country }) |
        @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer })
    </p>