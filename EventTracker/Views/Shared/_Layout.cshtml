@using Microsoft.AspNet.Identity

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/Stylesheet/StyleSheet.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="nav-container">
            <div class="navbar-header">
                @Html.ActionLink("Event Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right; padding-right: 5%;">
                    <li>@Html.ActionLink("Events", "../Event/GetEvents")</li>
                    <li>@Html.ActionLink("Artists", "../Artist/GetArtists")</li>
                    @if ((System.Web.HttpContext.Current.User != null) && System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        @*Checks to see if there is a current user*@
                        <li>@Html.ActionLink("My Events", "../Event/GetUserEvents", new { User_ID = Convert.ToString(User.Identity.GetUserId()).GetHashCode() })</li>
                        <li>@Html.ActionLink("Seen Artists", "../Artist/GetSeenArtists", new { User_ID = Convert.ToString(User.Identity.GetUserId()).GetHashCode() })</li>
                    }
                    @*Converts the Current Users ID to a hash code to look up their event history.*@

                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>